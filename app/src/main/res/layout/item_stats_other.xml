<android.support.v7.widget.CardView
    android:id="@+id/other_stats_cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/min_max_ll"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="8dp"
    android:visibility="invisible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/total_usage_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/total_usage"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.rachitgoyal.durationitem.DurationView
                android:id="@+id/total_dv"
                android:layout_width="70dp"
                android:layout_height="30dp"
                app:dv_label_color="@color/dark_gray"
                app:dv_label_text_size="8sp"
                app:dv_label_vertical_padding="4dp"
                app:dv_number_text_size="14sp"
                app:dv_show_secs="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/percent_time_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/time_spent_on_phone"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/average_percentage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="18.3%" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exceeded_time_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/total_exceeded_time"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.rachitgoyal.durationitem.DurationView
                android:id="@+id/exceeded_dv"
                android:layout_width="70dp"
                android:layout_height="30dp"
                app:dv_label_color="@color/dark_gray"
                app:dv_label_text_size="8sp"
                app:dv_label_vertical_padding="4dp"
                app:dv_number_text_size="14sp"
                app:dv_show_secs="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/red_days_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_red_days"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/red_day_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/green_days_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_green_days"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/green_day_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="21" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_days_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_recorded_days"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_days_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="37" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>