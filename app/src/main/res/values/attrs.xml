<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WaveView">
        <attr name="wlv_borderWidth" format="dimension" />
        <attr name="wlv_borderColor" format="color" />
        <attr name="wlv_progressValue" format="integer" />
        <attr name="wlv_shapeType" format="enum">
            <enum name="triangle" value="0" />
            <enum name="circle" value="1" />
            <enum name="square" value="2" />
            <enum name="rectangle" value="3" />
        </attr>
        <attr name="wlv_triangle_direction" format="enum">
            <enum name="north" value="0" />
            <enum name="south" value="1" />
            <enum name="east" value="2" />
            <enum name="west" value="3" />
        </attr>
        <attr name="wlv_round_rectangle" format="boolean" />
        <attr name="wlv_round_rectangle_x_and_y" format="integer" />
        <attr name="wlv_waveColor" format="color" />
        <attr name="wlv_wave_background_Color" format="color" />
        <attr name="wlv_waveAmplitude" format="float" />
        <attr name="wlv_titleTop" format="string" />
        <attr name="wlv_titleCenter" format="string" />
        <attr name="wlv_titleBottom" format="string" />
        <attr name="wlv_titleTopSize" format="dimension" />
        <attr name="wlv_titleCenterSize" format="dimension" />
        <attr name="wlv_titleBottomSize" format="dimension" />
        <attr name="wlv_titleTopColor" format="color" />
        <attr name="wlv_titleCenterColor" format="color" />
        <attr name="wlv_titleBottomColor" format="color" />
        <attr name="wlv_titleTopStrokeColor" format="color" />
        <attr name="wlv_titleTopStrokeWidth" format="dimension" />
        <attr name="wlv_titleBottomStrokeColor" format="color" />
        <attr name="wlv_titleBottomStrokeWidth" format="dimension" />
        <attr name="wlv_titleCenterStrokeColor" format="color" />
        <attr name="wlv_titleCenterStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExpansionHeader">
        <attr name="expansion_layout" format="reference" />
        <attr name="expansion_toggleOnClick" format="boolean" />
        <attr name="expansion_headerIndicator" format="reference" />
        <attr name="expansion_headerIndicatorRotationExpanded" format="integer" />
        <attr name="expansion_headerIndicatorRotationCollapsed" format="integer" />
    </declare-styleable>

    <declare-styleable name="ExpansionLayout">
        <attr name="expansion_expanded" format="boolean" />
    </declare-styleable>

    <attr name="expansion_openOnlyOne" format="boolean" />

    <declare-styleable name="ArcLayout">
        <attr name="curvature" format="dimension" />
        <attr name="gravity" format="integer">
            <flag name="top" value="0" />
            <flag name="bottom" value="1" />
        </attr>
        <attr name="curvatureDirection" format="integer">
            <flag name="outward" value="0" />
            <flag name="inward" value="1" />
        </attr>
        <attr name="crescentoTintMode" format="integer">
            <flag name="automatic" value="0" />
            <flag name="manual" value="1" />
        </attr>
        <attr name="crescentoTintColor" format="color" />
        <attr name="crescentoTintAlpha" format="integer" />
        <attr name="gradientDirection" format="integer">
            <flag name="top_to_bottom" value="0" />
            <flag name="bottom_to_top" value="1" />
            <flag name="left_to_right" value="2" />
            <flag name="right_to_left" value="3" />
        </attr>
        <attr name="gradientStartColor" format="color" />
        <attr name="gradientEndColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DurationView">
        <attr name="dv_days" format="integer" />
        <attr name="dv_hours" format="integer" />
        <attr name="dv_mins" format="integer" />
        <attr name="dv_secs" format="integer" />
        <attr name="dv_days_label" format="string" />
        <attr name="dv_hours_label" format="string" />
        <attr name="dv_mins_label" format="string" />
        <attr name="dv_secs_label" format="string" />
        <attr name="dv_number_text_size" format="dimension" />
        <attr name="dv_label_text_size" format="dimension" />
        <attr name="dv_label_position" format="integer">
            <flag name="top" value="0" />
            <flag name="bottom" value="1" />
        </attr>
        <attr name="dv_number_horizontal_padding" format="dimension" />
        <attr name="dv_label_vertical_padding" format="dimension" />

        <attr name="dv_days_color" format="color" />
        <attr name="dv_days_label_color" format="color" />
        <attr name="dv_hours_color" format="color" />
        <attr name="dv_hours_label_color" format="color" />
        <attr name="dv_mins_color" format="color" />
        <attr name="dv_mins_label_color" format="color" />
        <attr name="dv_secs_color" format="color" />
        <attr name="dv_secs_label_color" format="color" />
        <attr name="dv_number_color" format="color" />
        <attr name="dv_label_color" format="color" />
        <attr name="dv_text_color" format="color" />

        <attr name="dv_show_days" format="boolean" />
        <attr name="dv_show_hours" format="boolean" />
        <attr name="dv_show_mins" format="boolean" />
        <attr name="dv_show_secs" format="boolean" />
        <attr name="dv_show_labels" format="boolean" />
        <attr name="dv_background_color" format="color" />
        <attr name="dv_background_resource" format="integer" />
        <attr name="dv_show_dividers" format="boolean" />
        <attr name="dv_divider_width" format="dimension" />
        <attr name="dv_divider_color" format="color" />
        <attr name="dv_divider_top_bottom_margin" format="dimension" />

    </declare-styleable>
</resources>